---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<style>
  .floating {
    animation: float 3s ease-in-out infinite;
    display: block;
    margin: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @keyframes float {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-10px);
    }
  }

  .container {
    position: relative;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

<BaseLayout>
  <div class="container">
    <svg class="floating" width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <rect x="25" y="50" width="50" height="30" fill="#8B4513" />
      <polygon points="25,50 50,30 75,50" fill="#D2691E" />
    </svg>
  </div>
</BaseLayout>
