---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CardboardBox from "../../components/CardboardBox.astro";

// Blog posts with explicit dates for easy management
const posts = [
  {
    title: "A Maze",
    date: "November 12, 2025",
    slug: "a-maze",
    preview: "Lost in the labyrinth...",
    description: "Navigate a roguelike maze with limited vision, drop colored fires to mark your path, and battle spiky monsters."
  },
  {
    title: "Jumpboy",
    date: "March 31, 2025",
    slug: "jumpboy",
    preview: "You've fallen too far...",
    description: "An endless vertical platformer where you jump higher and higher, dodging monsters and collecting power-ups."
  },
  {
    title: "2021 Recipe Guide to Home Cooking",
    date: "October 10, 2021",
    slug: "cooking-guide",
    preview: "Anyone can cook.",
    description: "A personal collection of recipes, cooking and grocery shopping tips."
  },
  {
    title: "Calcifer",
    date: "March 10, 2025",
    slug: "calcifer",
    preview: "",
    description: "A cozy fireplace companion that crackles and glows with the warmth of your screen."
  },
  {
    title: "Welcome to the Attic",
    date: "March 9, 2025",
    slug: "welcome",
    preview: "",
    description: "The first entry—a dusty corner where my experiments and curiosities come to life."
  }
];

// Sort posts by date (most recent first)
const sortedPosts = [...posts].sort((a, b) => {
  const dateA = new Date(a.date);
  const dateB = new Date(b.date);
  return dateB.getTime() - dateA.getTime();
});
---

<BaseLayout>
  <!-- VT323 Retro Terminal Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
  
  <div class="min-h-screen bg-secondary px-4 sm:px-8 py-8 sm:py-16">
    <div class="max-w-3xl mx-auto">
      <div class="attic-header" data-aos="fade-up" data-aos-duration="1000">
        <h1 class="attic-title">THE ATTIC</h1>
        <div class="sort-control">
          <button id="sort-toggle" class="sort-btn">
            <span class="sort-bracket">[</span>
            <span id="sort-text">NEWEST</span>
            <span class="sort-bracket">]</span>
            <span class="sort-arrow">▼</span>
          </button>
        </div>
      </div>
      
      <div id="posts-container" class="boxes-container">
        {sortedPosts.map((post, index) => (
          <CardboardBox
            title={post.title}
            date={post.date}
            slug={post.slug}
            description={post.description}
            index={index}
          />
        ))}
      </div>
    </div>

    <!-- Gastly at the very bottom (matching Charmander layout) -->
    <div class="gastly-container">
      <a href="/" class="gastly-link">
        <svg
          id="gastly"
          class="gastly-svg"
          viewBox="0 0 64 64"
          xmlns="http://www.w3.org/2000/svg"
          width="120"
          height="120"
        >
          <!-- Gas effect (outer) -->
          <circle cx="32" cy="32" r="24" fill="#2D1F3D" opacity="0.4">
            <animate attributeName="r" values="24;26;24" dur="4s" repeatCount="indefinite" />
            <animate attributeName="opacity" values="0.4;0.5;0.4" dur="4s" repeatCount="indefinite" />
          </circle>

          <!-- Main body -->
          <circle cx="32" cy="32" r="20" fill="#382B4A">
            <animate attributeName="r" values="20;21;20" dur="3s" repeatCount="indefinite" />
          </circle>

          <!-- Eyes -->
          <g transform="translate(20,24)">
            <!-- Left eye -->
            <circle cx="0" cy="0" r="6" fill="white" opacity="0.9" />
            <circle cx="0" cy="0" r="3" fill="#2D1F3D">
              <animate attributeName="r" values="3;3.2;3" dur="3s" repeatCount="indefinite" />
            </circle>

            <!-- Right eye -->
            <circle cx="24" cy="0" r="6" fill="white" opacity="0.9" />
            <circle cx="24" cy="0" r="3" fill="#2D1F3D">
              <animate attributeName="r" values="3;3.2;3" dur="3s" repeatCount="indefinite" />
            </circle>
          </g>

          <!-- Mouth (subtle, like Charmander's) -->
          <path
            d="M30,36 C31,37 33,37 34,36"
            fill="none"
            stroke="white"
            stroke-width="1"
            stroke-linecap="round"
            opacity="0.7"
          />

          <!-- Gas particles -->
          <g opacity="0.4">
            <circle cx="16" cy="32" r="3" fill="#2D1F3D">
              <animate attributeName="cx" values="16;14;16" dur="4s" repeatCount="indefinite" />
              <animate attributeName="cy" values="32;30;32" dur="4s" repeatCount="indefinite" />
              <animate attributeName="opacity" values="0.4;0.6;0.4" dur="4s" repeatCount="indefinite" />
            </circle>
            <circle cx="48" cy="32" r="3" fill="#2D1F3D">
              <animate attributeName="cx" values="48;50;48" dur="4.5s" repeatCount="indefinite" />
              <animate attributeName="cy" values="32;34;32" dur="4.5s" repeatCount="indefinite" />
              <animate attributeName="opacity" values="0.4;0.6;0.4" dur="4.5s" repeatCount="indefinite" />
            </circle>
            <circle cx="32" cy="16" r="3" fill="#2D1F3D">
              <animate attributeName="cy" values="16;14;16" dur="5s" repeatCount="indefinite" />
              <animate attributeName="opacity" values="0.4;0.6;0.4" dur="5s" repeatCount="indefinite" />
            </circle>
            <circle cx="32" cy="48" r="3" fill="#2D1F3D">
              <animate attributeName="cy" values="48;50;48" dur="3.5s" repeatCount="indefinite" />
              <animate attributeName="opacity" values="0.4;0.6;0.4" dur="3.5s" repeatCount="indefinite" />
            </circle>
          </g>
        </svg>
      </a>
    </div>
  </div>

  <style>
    /* Add stars in the background */
    .min-h-screen {
      position: relative;
      overflow: hidden;
    }

    .min-h-screen::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(2px 2px at 20px 30px, #ff000010 0%, #00ff0010 50%, #0000ff10 100%, transparent),
        radial-gradient(2px 2px at 40px 70px, #ff00ff10 0%, #00ffff10 50%, #ffff0010 100%, transparent),
        radial-gradient(2px 2px at 50px 160px, #ff800010 0%, #80ff0010 50%, #0080ff10 100%, transparent),
        radial-gradient(2px 2px at 90px 40px, #ff008010 0%, #00ff8010 50%, #8000ff10 100%, transparent),
        radial-gradient(2px 2px at 130px 80px, #ff400010 0%, #40ff0010 50%, #0040ff10 100%, transparent),
        radial-gradient(2px 2px at 160px 120px, #ff004010 0%, #00ff4010 50%, #4000ff10 100%, transparent),
        radial-gradient(2px 2px at 200px 30px, #ffc00010 0%, #c0ff0010 50%, #00c0ff10 100%, transparent),
        radial-gradient(2px 2px at 240px 70px, #ff00c010 0%, #00ffc010 50%, #c000ff10 100%, transparent),
        radial-gradient(2px 2px at 280px 160px, #ff600010 0%, #60ff0010 50%, #0060ff10 100%, transparent),
        radial-gradient(2px 2px at 320px 40px, #ff006010 0%, #00ff6010 50%, #6000ff10 100%, transparent),
        radial-gradient(2px 2px at 360px 80px, #ffa00010 0%, #a0ff0010 50%, #00a0ff10 100%, transparent),
        radial-gradient(2px 2px at 400px 120px, #ff00a010 0%, #00ffa010 50%, #a000ff10 100%, transparent),
        radial-gradient(2px 2px at 440px 30px, #ff200010 0%, #20ff0010 50%, #0020ff10 100%, transparent),
        radial-gradient(2px 2px at 480px 70px, #ff002010 0%, #00ff2010 50%, #2000ff10 100%, transparent),
        radial-gradient(2px 2px at 520px 160px, #ffe00010 0%, #e0ff0010 50%, #00e0ff10 100%, transparent),
        radial-gradient(2px 2px at 560px 40px, #ff00e010 0%, #00ffe010 50%, #e000ff10 100%, transparent);
      background-repeat: repeat;
      background-size: 600px 600px;
      animation: starGlow 8s ease-in-out infinite;
      opacity: 0.4;
      z-index: 0;
      pointer-events: none;
    }

    @keyframes starGlow {
      0% {
        opacity: 0.3;
        filter: hue-rotate(0deg) brightness(1);
      }
      25% {
        opacity: 0.5;
        filter: hue-rotate(90deg) brightness(1.2);
      }
      50% {
        opacity: 0.4;
        filter: hue-rotate(180deg) brightness(1);
      }
      75% {
        opacity: 0.6;
        filter: hue-rotate(270deg) brightness(1.3);
      }
      100% {
        opacity: 0.3;
        filter: hue-rotate(360deg) brightness(1);
      }
    }

    /* Dusty grain overlay */
    .min-h-screen::after {
      content: '';
      position: fixed;
      top: -50%;
      left: -50%;
      right: -50%;
      bottom: -50%;
      width: 200%;
      height: 200%;
      background: transparent url('data:image/svg+xml,<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.85" numOctaves="4" stitchTiles="stitch"/><feColorMatrix type="saturate" values="0"/></filter><rect width="100%" height="100%" filter="url(%23noise)"/></svg>') repeat;
      opacity: 0.12;
      z-index: 0;
      pointer-events: none;
      animation: grainShift 0.5s steps(1) infinite;
    }

    @keyframes grainShift {
      0%, 100% { transform: translate(0, 0); }
      25% { transform: translate(-2%, -2%); }
      50% { transform: translate(2%, 2%); }
      75% { transform: translate(-1%, 1%); }
    }

    /* Ensure content stays above the stars */
    .max-w-3xl {
      position: relative;
      z-index: 1;
    }

    /* Header Container */
    .attic-header {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 3rem;
    }

    /* TV Title Text */
    .attic-title {
      font-family: 'VT323', 'Courier New', monospace;
      font-size: 4rem;
      font-weight: normal;
      letter-spacing: 0.3em;
      color: rgb(var(--color-primary) / 0.85);
      text-shadow: 
        0 0 8px rgb(var(--color-primary) / 0.4),
        0 0 16px rgb(var(--color-primary) / 0.2),
        1px 1px 0 rgb(var(--color-primary) / 0.15),
        -1px -1px 0 rgb(var(--color-primary) / 0.1);
      margin: 0;
      animation: tvFlicker 4s ease-in-out infinite, textGlow 3s ease-in-out infinite;
    }

    @keyframes tvFlicker {
      0%, 100% { opacity: 1; }
      92% { opacity: 1; }
      93% { opacity: 0.85; }
      94% { opacity: 1; }
      97% { opacity: 0.9; }
      98% { opacity: 1; }
    }

    @keyframes textGlow {
      0%, 100% { 
        text-shadow: 
          0 0 8px rgb(var(--color-primary) / 0.4),
          0 0 16px rgb(var(--color-primary) / 0.2),
          1px 1px 0 rgb(var(--color-primary) / 0.15),
          -1px -1px 0 rgb(var(--color-primary) / 0.1);
      }
      50% { 
        text-shadow: 
          0 0 12px rgb(var(--color-primary) / 0.5),
          0 0 24px rgb(var(--color-primary) / 0.25),
          1px 1px 0 rgb(var(--color-primary) / 0.2),
          -1px -1px 0 rgb(var(--color-primary) / 0.15);
      }
    }

    /* Sort Control */
    .sort-control {
      margin-top: 1.5rem;
    }

    .sort-btn {
      background: transparent;
      border: none;
      font-family: 'VT323', 'Courier New', monospace;
      font-size: 1.1rem;
      letter-spacing: 0.2em;
      color: rgb(var(--color-primary) / 0.6);
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .sort-btn:hover {
      color: rgb(var(--color-primary));
      text-shadow: 0 0 10px rgb(var(--color-primary) / 0.5);
    }

    .sort-bracket {
      color: rgb(var(--color-primary) / 0.4);
    }

    .sort-btn:hover .sort-bracket {
      color: rgb(var(--color-primary) / 0.8);
    }

    .sort-arrow {
      font-size: 0.8rem;
      transition: transform 0.3s ease;
    }

    .sort-btn.flipped .sort-arrow {
      transform: rotate(180deg);
    }

    /* Mobile adjustments */
    @media (max-width: 640px) {
      .attic-title {
        font-size: 2.5rem;
        letter-spacing: 0.2em;
      }
    }

    /* Boxes Container - horizontal scrolling grid */
    .boxes-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 3rem 2rem;
      padding: 2rem 0;
      max-width: 100%;
    }

    /* Vertical stack on mobile */
    @media (max-width: 768px) {
      .boxes-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
        padding: 2rem 1rem;
      }
    }

    /* Tablet grid adjustments */
    @media (min-width: 769px) and (max-width: 1024px) {
      .boxes-container {
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 4rem 2.5rem;
      }
    }

    /* Large desktop */
    @media (min-width: 1025px) {
      .boxes-container {
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 5rem 3rem;
      }
    }

    /* Gastly container - matching Charmander's positioning */
    .gastly-container {
      position: relative;
      display: flex;
      justify-content: flex-end;
      padding: 10px 20px 0px 20px;
      margin-top: 10px;
      margin-bottom: 0;
    }

    .gastly-link {
      position: relative;
      display: block;
      cursor: pointer;
    }

    .gastly-svg {
      filter: drop-shadow(0 0 12px rgba(45, 31, 61, 0.2));
      transition: transform 0.3s ease-in-out;
      animation: gentleFloat 3s ease-in-out infinite;
    }

    /* Gentle floating animation (like Charmander's bob) */
    @keyframes gentleFloat {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-8px);
      }
    }

    /* Shake on hover (matching Charmander's shake) */
    @keyframes shake {
      0% {
        transform: translate(0, 0) rotate(0deg);
      }
      10% {
        transform: translate(-1px, -1px) rotate(-1deg);
      }
      20% {
        transform: translate(1px, 1px) rotate(1deg);
      }
      30% {
        transform: translate(-1px, 1px) rotate(-1deg);
      }
      40% {
        transform: translate(1px, -1px) rotate(1deg);
      }
      50% {
        transform: translate(-1px, -1px) rotate(-1deg);
      }
      60% {
        transform: translate(1px, 1px) rotate(1deg);
      }
      70% {
        transform: translate(-1px, 1px) rotate(-1deg);
      }
      80% {
        transform: translate(1px, -1px) rotate(1deg);
      }
      90% {
        transform: translate(-0.5px, -0.5px) rotate(-0.5deg);
      }
    }

    .gastly-link:hover .gastly-svg {
      animation: shake 0.6s ease-in-out infinite;
    }

    /* Smoother dissipation effect on click (matching Charmander) */
    .gastly-svg.clicked {
      animation: vanish 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      pointer-events: none;
    }

    @keyframes vanish {
      0% {
        transform: scale(1) translateY(0) rotate(0deg);
        opacity: 1;
        filter: drop-shadow(0 0 12px rgba(45, 31, 61, 0.2));
      }
      30% {
        transform: scale(1.1) translateY(-5px) rotate(5deg);
        opacity: 0.8;
        filter: drop-shadow(0 0 20px rgba(45, 31, 61, 0.4)) blur(2px);
      }
      100% {
        transform: scale(0.3) translateY(-30px) rotate(180deg);
        opacity: 0;
        filter: drop-shadow(0 0 30px rgba(45, 31, 61, 0)) blur(10px);
      }
    }

    /* Mobile adjustments - center Gastly */
    @media (max-width: 640px) {
      .gastly-container {
        justify-content: center;
        padding: 5px 10px 0px 10px;
        margin-top: 5px;
        margin-bottom: 0;
      }

      .gastly-svg {
        width: 80px;
        height: 80px;
      }
    }

    /* Update hover effects to use white */
    :is(a, button):hover {
      color: white !important;
    }

    .bg-primary\/5:hover {
      background-color: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.2);
    }
  </style>

  <script>
    // Fix for bfcache - reset opacity when navigating back
    window.addEventListener('pageshow', (event) => {
      if (event.persisted) {
        document.body.style.opacity = '1';
        document.body.style.transition = 'none';
      }
    });
    document.body.style.opacity = '1';

    let isNewestFirst = true;
    const postsContainer = document.getElementById('posts-container');
    const sortToggle = document.getElementById('sort-toggle');
    const sortText = document.getElementById('sort-text');
    const posts = Array.from(postsContainer.children);

    sortToggle.addEventListener('click', () => {
      isNewestFirst = !isNewestFirst;
      
      // Update UI
      sortText.textContent = isNewestFirst ? 'NEWEST' : 'OLDEST';
      sortToggle.classList.toggle('flipped', !isNewestFirst);

      // Sort posts
      posts.reverse().forEach(post => {
        postsContainer.appendChild(post);
      });
    });

    // Gastly click handler (matching Charmander's smooth transition)
    const gastlyLink = document.querySelector('.gastly-link');
    const gastly = document.getElementById('gastly');
    
    if (gastlyLink && gastly) {
      gastlyLink.addEventListener('click', (e) => {
        e.preventDefault();
        
        if (!gastly.classList.contains('clicked')) {
          gastly.classList.add('clicked');
          
          // Smooth fade out of page
          document.body.style.transition = 'opacity 0.3s ease-out';
          setTimeout(() => {
            document.body.style.opacity = '0';
          }, 500);
          
          // Navigate after animation completes
          setTimeout(() => {
            window.location.href = '/';
          }, 800);
        }
      });
    }

    // Initialize cardboard boxes
    const boxes = document.querySelectorAll('.cardboard-box-wrapper');
    
    boxes.forEach((wrapper) => {
      const box = wrapper.querySelector('.cardboard-box');
      const dustCanvas = wrapper.querySelector('.dust-canvas');
      const slug = wrapper.dataset.slug;
      
      // Click/Touch handler - dive into box (MUST be registered regardless of canvas)
      let isNavigating = false;
      
      function handleBoxNavigation(e) {
        // Prevent double-firing and default behavior
        if (isNavigating) return;
        isNavigating = true;
        
        if (e.type === 'touchend') {
          e.preventDefault();
        }
        
        // Zoom into the box
        wrapper.style.transition = 'transform 0.8s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.8s ease';
        wrapper.style.transform = 'scale(3) translateY(-50px)';
        wrapper.style.opacity = '0';
        
        // Fade out page
        document.body.style.transition = 'opacity 0.5s ease-out';
        setTimeout(() => {
          document.body.style.opacity = '0';
        }, 300);
        
        // Navigate
        setTimeout(() => {
          window.location.href = `/blog/${slug}`;
        }, 800);
      }
      
      // Add both click and touch handlers
      wrapper.addEventListener('click', handleBoxNavigation);
      wrapper.addEventListener('touchend', handleBoxNavigation);
      
      // Dust particle effects (optional - skip if no canvas)
      if (!dustCanvas) return;
      
      const ctx = dustCanvas.getContext('2d');
      dustCanvas.width = wrapper.offsetWidth;
      dustCanvas.height = 300;
      
      // Dust particles
      let particles = [];
      let isHovering = false;
      let animationFrame = null;
      
      class DustParticle {
        constructor() {
          this.reset();
        }
        
        reset() {
          this.x = dustCanvas.width / 2 + (Math.random() - 0.5) * 100;
          this.y = 50 + Math.random() * 30;
          this.size = 2 + Math.random() * 3;
          this.speedY = -0.8 - Math.random() * 1.2;
          this.speedX = (Math.random() - 0.5) * 0.8;
          this.opacity = 0.6 + Math.random() * 0.4;
          this.life = 1;
          this.maxLife = 80 + Math.random() * 40;
          this.age = 0;
        }
        
        update() {
          this.y += this.speedY;
          this.x += this.speedX;
          this.age++;
          this.life = 1 - (this.age / this.maxLife);
          
          // Fade out as it rises
          if (this.life <= 0 || this.y < -20) {
            if (isHovering) {
              this.reset();
            }
          }
        }
        
        draw() {
          const alpha = this.life * this.opacity;
          // Spooky gray/white dust
          ctx.fillStyle = `rgba(180, 180, 180, ${alpha})`;
          ctx.shadowBlur = 4;
          ctx.shadowColor = `rgba(180, 180, 180, ${alpha * 0.5})`;
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fill();
          ctx.shadowBlur = 0;
        }
      }
      
      // Create particles
      for (let i = 0; i < 40; i++) {
        particles.push(new DustParticle());
      }
      
      // Animate dust
      function animateDust() {
        ctx.clearRect(0, 0, dustCanvas.width, dustCanvas.height);
        
        if (isHovering) {
          particles.forEach(particle => {
            particle.update();
            particle.draw();
          });
          animationFrame = requestAnimationFrame(animateDust);
        }
      }
      
      // Hover events
      wrapper.addEventListener('mouseenter', () => {
        isHovering = true;
        // Reset all particles
        particles.forEach(p => p.reset());
        // Start animation
        if (animationFrame) cancelAnimationFrame(animationFrame);
        animateDust();
      });
      
      wrapper.addEventListener('mouseleave', () => {
        isHovering = false;
        // Let particles fade out naturally
        setTimeout(() => {
          if (!isHovering) {
            ctx.clearRect(0, 0, dustCanvas.width, dustCanvas.height);
            if (animationFrame) cancelAnimationFrame(animationFrame);
          }
        }, 1000);
      });
    });

    // ===== SPECTRAL GHOST TRAIL CURSOR =====
    setTimeout(() => {
      const trailContainer = document.getElementById('ghostTrailContainer');
      if (!trailContainer) return;
      
      // Ghost sprite ASCII art (old-school vibes)
      const ghostSprites = [
        ' ░░░ \n░░░░░\n░ ░ ░\n░░░░░\n ░ ░ ',
        ' ▓▓▓ \n▓▓▓▓▓\n▓ ▓ ▓\n▓▓▓▓▓\n ▓ ▓ ',
        '  ●  \n ███ \n█ █ █\n █ █ ',
      ];
      
      // Simple trailing ghost characters
      const ghostChars = ['◜', '◝', '◞', '◟', '○', '◌', '◎', '●'];
      const wispChars = ['~', '≈', '∿', '∾', '≋', '⌇'];
      const crypticChars = ['ᚠ', 'ᚢ', 'ᚦ', 'ᚨ', 'ᚱ', 'ᚲ', 'ᚷ', '࿊', '࿋'];
      
      let mouseX = 0, mouseY = 0;
      let isMoving = false;
      let moveTimeout;
      
      // Trail of ghosts that follow cursor
      const numGhosts = 8;
      const ghosts = [];
      
      // Create trailing ghost elements
      for (let i = 0; i < numGhosts; i++) {
        const ghost = document.createElement('div');
        ghost.className = 'trailing-ghost';
        ghost.innerHTML = `<span class="ghost-body">◉</span>`;
        ghost.style.setProperty('--delay', i);
        trailContainer.appendChild(ghost);
        ghosts.push({
          el: ghost,
          x: 0,
          y: 0,
          targetX: 0,
          targetY: 0,
          ease: 0.15 - (i * 0.012) // Slower follow for each successive ghost
        });
      }
      
      // Main spectral wisp (the "cursor")
      const mainWisp = document.createElement('div');
      mainWisp.className = 'main-wisp';
      mainWisp.innerHTML = '◈';
      trailContainer.appendChild(mainWisp);
      let wispX = 0, wispY = 0;
      
      // Animate all ghosts
      function animate() {
        // Main wisp follows mouse directly
        const wispEase = 0.25;
        wispX += (mouseX - wispX) * wispEase;
        wispY += (mouseY - wispY) * wispEase;
        mainWisp.style.left = `${wispX}px`;
        mainWisp.style.top = `${wispY}px`;
        
        // Each ghost follows the one before it
        ghosts.forEach((ghost, i) => {
          const target = i === 0 ? { x: wispX, y: wispY } : ghosts[i - 1];
          ghost.x += (target.x - ghost.x) * ghost.ease;
          ghost.y += (target.y - ghost.y) * ghost.ease;
          
          ghost.el.style.left = `${ghost.x}px`;
          ghost.el.style.top = `${ghost.y}px`;
          
          // Fade out further back in the chain
          const opacity = 0.7 - (i * 0.08);
          ghost.el.style.opacity = opacity;
        });
        
        requestAnimationFrame(animate);
      }
      animate();
      
      // Track mouse
      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
        isMoving = true;
        
        mainWisp.classList.add('active');
        ghosts.forEach(g => g.el.classList.add('active'));
        
        clearTimeout(moveTimeout);
        moveTimeout = setTimeout(() => {
          isMoving = false;
        }, 100);
        
        // Spawn ethereal wisps occasionally
        if (Math.random() > 0.85) {
          spawnWisp(e.clientX, e.clientY);
        }
      });
      
      document.addEventListener('mouseleave', () => {
        mainWisp.classList.remove('active');
        ghosts.forEach(g => g.el.classList.remove('active'));
      });
      
      // Click - summon spirits
      document.addEventListener('mousedown', (e) => {
        mainWisp.classList.add('summoning');
        summonSpirits(e.clientX, e.clientY);
        createSummoningCircle(e.clientX, e.clientY);
      });
      
      document.addEventListener('mouseup', () => {
        mainWisp.classList.remove('summoning');
      });
      
      // Spawn floating wisp
      function spawnWisp(x, y) {
        const wisp = document.createElement('span');
        wisp.className = 'ethereal-wisp';
        wisp.textContent = wispChars[Math.floor(Math.random() * wispChars.length)];
        wisp.style.left = `${x + (Math.random() - 0.5) * 30}px`;
        wisp.style.top = `${y + (Math.random() - 0.5) * 30}px`;
        wisp.style.setProperty('--drift', `${(Math.random() - 0.5) * 40}px`);
        trailContainer.appendChild(wisp);
        setTimeout(() => wisp.remove(), 1200);
      }
      
      // Summon spirits on click
      function summonSpirits(x, y) {
        // Burst of cryptic runes
        for (let i = 0; i < 6; i++) {
          const spirit = document.createElement('span');
          spirit.className = 'summoned-spirit';
          spirit.textContent = crypticChars[Math.floor(Math.random() * crypticChars.length)];
          
          const angle = (i / 6) * Math.PI * 2 + Math.random() * 0.5;
          const distance = 40 + Math.random() * 50;
          spirit.style.setProperty('--tx', `${Math.cos(angle) * distance}px`);
          spirit.style.setProperty('--ty', `${Math.sin(angle) * distance}px`);
          spirit.style.left = `${x}px`;
          spirit.style.top = `${y}px`;
          spirit.style.animationDelay = `${i * 0.04}s`;
          
          trailContainer.appendChild(spirit);
          setTimeout(() => spirit.remove(), 800);
        }
        
        // Ghost faces float up
        for (let i = 0; i < 3; i++) {
          const face = document.createElement('span');
          face.className = 'ghost-face';
          face.textContent = ghostChars[Math.floor(Math.random() * ghostChars.length)];
          face.style.left = `${x + (Math.random() - 0.5) * 60}px`;
          face.style.top = `${y}px`;
          face.style.animationDelay = `${i * 0.1}s`;
          
          trailContainer.appendChild(face);
          setTimeout(() => face.remove(), 1000);
        }
      }
      
      // Summoning circle on click
      function createSummoningCircle(x, y) {
        const circle = document.createElement('div');
        circle.className = 'summoning-circle';
        circle.style.left = `${x}px`;
        circle.style.top = `${y}px`;
        trailContainer.appendChild(circle);
        setTimeout(() => circle.remove(), 800);
        
        // Screen flicker
        const flicker = document.createElement('div');
        flicker.className = 'screen-flicker';
        document.body.appendChild(flicker);
        setTimeout(() => flicker.remove(), 150);
      }
      
      // Periodic ghost character changes
      setInterval(() => {
        ghosts.forEach((ghost, i) => {
          if (Math.random() > 0.7) {
            const body = ghost.el.querySelector('.ghost-body');
            if (body) {
              body.textContent = ghostChars[Math.floor(Math.random() * ghostChars.length)];
            }
          }
        });
        // Main wisp flicker
        if (Math.random() > 0.9) {
          mainWisp.style.opacity = '0.4';
          setTimeout(() => mainWisp.style.opacity = '1', 60);
        }
      }, 120);
      
    }, 100);
  </script>

