    <style>
      .marquee-container {
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        width: 100%;
      }
    
      .marquee {
        display: inline-block;
        white-space: nowrap;
        animation: marquee-bounce 28s linear infinite;
      }
    
      .marquee svg {
        display: inline-block;
        margin-right: 10px;
        transition: transform 0.3s ease-in-out, filter 0.5s ease-in-out, stroke 0.5s ease-in-out;
      }
    
      /* Subtle shake animation */
      @keyframes subtle-shake {
        0%, 100% {
          transform: translate(0, 0) rotate(0deg);
        }
        25% {
          transform: translate(-2px, -2px) rotate(-2deg);
        }
        50% {
          transform: translate(2px, 2px) rotate(2deg);
        }
        75% {
          transform: translate(-1px, 1px) rotate(-1deg);
        }
      }
    
      /* Hover effects with gradual transition */
      .marquee svg:hover path {
        filter: brightness(1.02);
        stroke: #FF9236;
        stroke-width: 0.5;
      }
    
      .marquee svg:hover {
        animation: subtle-shake 0.5s infinite ease-in-out;
        transform: scale(1.1); /* Slightly enlarge on hover */
      }
    
      /* Main marquee scrolling animation */
      @keyframes marquee-bounce {
        0% {
          transform: translateX(0);
        }
        50% {
          transform: translateX(calc(-100% + 100vw));
        }
        100% {
          transform: translateX(0);
        }
      }
    
      /* Dissipation effect on click */
      .marquee svg.clicked {
        animation: dissipate 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        pointer-events: none;
      }
    
      @keyframes dissipate {
        0% {
          transform: scale(1) translateY(0);
          opacity: 1;
          filter: brightness(1);
        }
        50% {
          transform: scale(1.2) translateY(-20px);
          opacity: 0.7;
          filter: brightness(1.2);
        }
        100% {
          transform: scale(0) translateY(-40px);
          opacity: 0;
          filter: brightness(0);
        }
      }
    </style>
    
    
