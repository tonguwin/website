<!-- Amplitude Analytics -->
<script src="https://cdn.amplitude.com/script/12fef355dd33bd798771c8b1f90efbec.js"></script>
<script>
  window.amplitude.add(window.sessionReplay.plugin({sampleRate: 1}));
  window.amplitude.init('12fef355dd33bd798771c8b1f90efbec', {
    "fetchRemoteConfig": true,
    "autocapture": {
      "attribution": true,
      "fileDownloads": true,
      "formInteractions": true,
      "pageViews": true,
      "sessions": true,
      "elementInteractions": true,
      "networkTracking": true,
      "webVitals": true,
      "frustrationInteractions": true
    }
  });
</script>

<!-- Amplitude Experiment SDK -->
<script src="https://unpkg.com/@amplitude/experiment-js-client@1.10.1/dist/experiment.umd.js"></script>
<script>
  // Initialize Amplitude Experiment
  (async function() {
    try {
      const experiment = Experiment.Experiment.initializeWithAmplitudeAnalytics(
        'client-UKST4Wz3pTV1lnkzUHvDZrwTGkqytTat'
      );
      
      // Fetch all variants for the user
      await experiment.fetch();
      
      // Store experiment instance globally for use in pages
      window.amplitudeExperiment = experiment;
      
      // Dispatch event when experiment is ready
      window.dispatchEvent(new Event('experimentReady'));
      
      console.log('[Amplitude Experiment] Initialized successfully');
    } catch (error) {
      console.error('[Amplitude Experiment] Failed to initialize:', error);
    }
  })();
</script>